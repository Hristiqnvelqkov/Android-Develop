<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.hristiyan.menu.fragments.ChoosePersonOrAdministratorFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/administrator_button"
        android:layout_width="@dimen/button_administrator_width"
        android:padding="@dimen/default_padding"
        android:lines="2"
        android:background="@drawable/button_selector"
        android:layout_height="@dimen/button_administrator_height"
        android:textSize="@dimen/text_size"
        android:text="@string/administator" />

    <Button
        android:id="@+id/user_button"
        android:layout_width="@dimen/button_administrator_width"
        android:text="@string/user"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:padding="@dimen/default_padding"
        android:background="@drawable/button_selector"
        android:textSize="@dimen/text_size"
        android:layout_height="@dimen/button_administrator_height" />
    </LinearLayout>
</RelativeLayout>
