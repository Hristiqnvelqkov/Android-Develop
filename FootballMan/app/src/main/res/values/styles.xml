<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="InGameImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="InGameImageViewTablet">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="InGameImageViewLand">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="InGameImageViewLandTablet">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="textView">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="paddings">
        <item name="android:paddingBottom">3dp</item>
        <item name = "android:paddingTop" > 3dp</item>
        <item name = "android:paddingLeft">2dp</item>
        <item name = "android:paddingRight"> 2dp</item>

    </style>

</resources>
