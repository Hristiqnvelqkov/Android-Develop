<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:gravity="center"
              android:paddingTop="4dp"
              android:paddingEnd="4dp"
              android:paddingBottom="4dp"
              android:paddingStart="4dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/game_stat"
            android:layout_width="1dp"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/make_red_card"
            style="@style/InGameImageViewTablet"
            android:src="@mipmap/red"/>

        <TextView
            android:id="@+id/get_red_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_yellow_card"
            style="@style/InGameImageViewTablet"
            android:src="@mipmap/yellow"/>

        <TextView
            android:id="@+id/get_yellow_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_goal"
            style="@style/InGameImageViewTablet"
            android:src="@mipmap/ball_icon_round"/>

        <TextView
            android:id="@+id/get_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_faul"
            style="@style/InGameImageView"
            android:src="@mipmap/faul"
            />

        <TextView
            android:id="@+id/get_fauls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_assist"
            style="@style/InGameImageViewTablet"
            android:src="@mipmap/assist"
            />
        <TextView
            android:id="@+id/get_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/make_penalty"
            android:src="@mipmap/duzpa"
            style="@style/InGameImageView"/>
        <TextView
            android:id="@+id/get_penalties"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>