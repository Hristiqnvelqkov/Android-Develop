<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/game_stat"
            android:layout_width="20dp"
            android:layout_height="20dp"/>

        <ImageView
            android:id="@+id/make_red_card"
            style="@style/InGameImageViewLand"
            android:src="@mipmap/red"/>

        <TextView
            android:id="@+id/get_red_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_yellow_card"
            style="@style/InGameImageViewLand"
            android:src="@mipmap/yellow"/>

        <TextView
            android:id="@+id/get_yellow_cards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_goal"
            style="@style/InGameImageViewLand"
            android:src="@mipmap/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/get_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_faul"
            style="@style/InGameImageViewLand"
            android:src="@mipmap/faul"
            />

        <TextView
            android:id="@+id/get_fauls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/make_assist"
            style="@style/InGameImageViewLand"
            android:src="@mipmap/assist"
            />
        <TextView
            android:id="@+id/get_assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>