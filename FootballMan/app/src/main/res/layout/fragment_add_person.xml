<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context="com.apress.gerber.footballman.Fragments.AddPersonFragment">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/player_name"
        style="@style/paddings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:inputType="textCapWords"
            android:layout_height="wrap_content"
            android:hint="@string/player_name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/player_number"
        style="@style/paddings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_name">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignBottom="@+id/textInputLayout6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:hint="@string/player_number"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/player_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="#ffffffff" />


</RelativeLayout>
